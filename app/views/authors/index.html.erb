<h1>Listing authors</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
	<th>Options</th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td><%= author.username %></td>
    <td><%= author.email %></td>
    <td><%= link_to 'Show', author %> | <%= link_to 'Edit', edit_author_path(author) %> | <%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td></td>
    <td></td>
  </tr>
<% end %>
</table>

<br />

